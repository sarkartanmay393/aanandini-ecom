# --- Database (Prisma) ---
# Connection string for PostgreSQL database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/aanandini_db?schema=public"

# --- Authentication (JWT) ---
# Secret key for signing JWT tokens. Use a strong random string (e.g. `openssl rand -base64 32`)
JWT_SECRET="super-secret-key-change-this-in-production"
# Token expiration time (e.g. 1d, 1h, 15m)
JWT_EXPIRATION="7d"

# --- API URLs (Public) ---
# URL for the API server (used by web/admin apps)
NEXT_PUBLIC_API_URL="http://localhost:3000"
# URL for the Admin server (if needed)
NEXT_PUBLIC_ADMIN_URL="http://localhost:3001"
# URL for the Web storefront (e.g. for email links)
NEXT_PUBLIC_WEB_URL="http://localhost:3002"

# --- SMS Service (2factor.in) ---
# API Key for sending SMS OTPs. Required for production.
# In development, leave blank to log OTPs to console.
TWOFACTOR_API_KEY=""

# --- File Uploads (AWS S3 / Azure Blob) ---
# S3 Bucket Name
AWS_S3_BUCKET="aanandini-uploads"
# AWS Region (e.g. ap-south-1)
AWS_REGION="ap-south-1"
# AWS Access Key ID
AWS_ACCESS_KEY_ID=""
# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=""

# --- Email Service (AWS SES) ---
# Sender email address verified in SES
SES_FROM_EMAIL="noreply@yourdomain.com"
# (Optional) AWS Credentials specifically for SES if different from S3
# SES_AWS_ACCESS_KEY_ID=""
# SES_AWS_SECRET_ACCESS_KEY=""

# --- OAuth (Google) ---
# Client ID from Google Cloud Console
GOOGLE_CLIENT_ID=""
# Client Secret from Google Cloud Console
GOOGLE_CLIENT_SECRET=""
# Callback URL registered in Google Cloud Console
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# --- Server Configuration ---
# Port for the API server (default: 3000)
PORT=3000
# Node Environment (development | production)
NODE_ENV="development"

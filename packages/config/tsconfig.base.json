{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "ES2021",
            "dom",
            "dom.iterable"
        ],
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "incremental": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}